---
import { Image } from "astro:assets";
import Layout from "../../../layouts/Layout.astro";

import zp_thumbnailImage from "../../../../assets/images/portfolio/zustellpartner/zp-posters-thumbnail.jpg";
import zp_content_img_01 from "../../../../assets/images/portfolio/zustellpartner/zp-posters-content-1.jpg";
import zp_content_img_02 from "../../../../assets/images/portfolio/zustellpartner/zp-posters-content-2.jpg";
import zp_content_img_03 from "../../../../assets/images/portfolio/zustellpartner/zp-posters-content-3.jpg";
---

<Layout title="Project | zustellpartner.at" noindex={true}>
  <div class="relative z-0 pb-12 pt-48">
    <div class="relative z-10 m-auto max-w-6xl px-4 md:px-8">
      <div
        class="flex flex-col items-center gap-8 text-center md:flex-row md:text-left"
      >
        <div class="md:w-1/2">
          <a
            href="/en/#works-design"
            class="z-50 mb-12 inline-flex items-center gap-2 rounded-lg bg-gray-800 px-3 py-2 hover:bg-gray-700"
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="16"
              height="16"
              fill="currentColor"
              class="bi bi-chevron-left"
              viewBox="0 0 16 16"
            >
              <path
                fill-rule="evenodd"
                d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"
              ></path>
            </svg>
             Go back
          </a>
          <p class="uppercase tracking-widest text-gray-300">Project</p>
          <h2 class="font-header mt-2 text-6xl">zustellpartner.at posters</h2>
          <p class="mt-5 max-w-prose text-lg tracking-wide text-gray-400">
            Advertising campaign
          </p>
        </div>
        <div class="md:w-1/2">
          <Image
            src={zp_thumbnailImage}
            alt="zustellpartner.at Project Thumbnail"
            class="rounded-2xl"
            transition:name="works.zpadscampaign"
          />
        </div>
      </div>
    </div>
    <div class={`absolute inset-0 h-full z-0 bg-gray-900 dark:opacity-50`}>
    </div>
  </div>
  <div class={`relative py-20 duration-300 overflow-hidden`}>
    <div class="relative z-10 m-auto max-w-6xl px-4 md:px-8">
      <div class="md:flex">
        <div class="mb-12 md:w-1/4">
          <p class="uppercase tracking-widest text-gray-300">Work involved</p>
          <p class="mt-5 max-w-prose text-lg tracking-wide text-gray-400">
            Posters
          </p>
          <p class="mt-5 max-w-prose text-lg tracking-wide text-gray-400">
            Press advertisement
          </p>
        </div>

        <div class="ml-auto max-w-3xl md:w-3/4">
          <p class="mb-5 uppercase tracking-widest text-gray-300">Project</p>
          <div class="flex flex-col gap-8">
            <p class="text-gray-4 text-lg tracking-wide text-gray-400">
              The task was to create an advertising campaign for those looking
              for a flexible side job outside normal working hours.
            </p>
            <Image src={zp_content_img_01} alt="sketches" class="rounded-2xl" />

            <Image src={zp_content_img_02} alt="website" class="rounded-2xl" />

            <Image src={zp_content_img_03} alt="website" class="rounded-2xl" />

            <p
              class="mt-8 border-t-2 border-dashed border-gray-700 pt-12 uppercase tracking-widest text-gray-400"
            >
              Acknowledgement
            </p>
            <p class="max-w-prose text-sm tracking-wide text-gray-400">
              &copy; Some used images belongs to Cimedia Printmedienvertriebs
              GmbH and WNB Zustell GmbH.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
