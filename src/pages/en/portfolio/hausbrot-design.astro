---
import { Image } from "astro:assets";
import Layout from "../../../layouts/Layout.astro";

import hbr_thumbnailImage from "../../../../assets/images/portfolio/hbr/hbr_print_thumbnail.jpg";
import hbr_content_img_01 from "../../../../assets/images/portfolio/hbr/hbr_print_content01.jpg";
import hbr_content_img_02 from "../../../../assets/images/portfolio/hbr/hbr_print_content02.jpg";
import hbr_content_img_03 from "../../../../assets/images/portfolio/hbr/hbr_print_content03.jpg";
import hbr_content_img_04 from "../../../../assets/images/portfolio/hbr/hbr_print_content04.jpg";
import hbr_content_img_05 from "../../../../assets/images/portfolio/hbr/hbr_print_content05.jpg";
import hbr_content_img_06 from "../../../../assets/images/portfolio/hbr/hbr_print_content06.jpg";
import hbr_content_img_07 from "../../../../assets/images/portfolio/hbr/hbr_print_content07.jpg";
---

<Layout title="Project | Hausbrot.at">
  <div class="relative z-0 pb-12 pt-48">
    <div class="relative z-10 m-auto max-w-6xl px-4 md:px-8">
      <div
        class="flex flex-col items-center gap-8 text-center md:flex-row md:text-left"
      >
        <div class="md:w-1/2">
          <a
            href="/en/#works-web"
            class="z-50 mb-12 inline-flex items-center gap-2 rounded-lg bg-gray-800 px-3 py-2 hover:bg-gray-700"
          >
            <!-- prettier-ignore -->
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chevron-left" viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z"/>
            </svg>
             Go back
          </a>
          <p class="uppercase tracking-widest text-gray-300">Project</p>
          <h2 class="font-header mt-2 text-6xl">hausbrot.at</h2>
          <p class="mt-5 max-w-prose text-lg tracking-wide text-gray-400">
            Various print Projects
          </p>
          <div class="inline-flex items-center gap-4 pb-4 pt-6">
            <a
              href="https://hausbrot.at/"
              target="_blank"
              rel="nofollow noreferrer"
              class="focus:ring-site-primary flex items-center gap-2 rounded-full bg-orange px-6 py-2 text-lg hover:bg-orange-light focus:ring-4"
            >
              Visit hausbrot.at
              <svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                viewBox="0 0 24 24"
                stroke-width="1.5"
                stroke="currentColor"
                class="h-6 w-6"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
                ></path>
              </svg>
            </a>
          </div>
        </div>
        <div class="md:w-1/2">
          <Image
            src={hbr_thumbnailImage}
            alt="hausbrot.at Project Thumbnail"
            class="rounded-2xl"
            transition:name="works.hbrdesign"
          />
        </div>
      </div>
    </div>
    <div class={`absolute inset-0 h-full z-0 bg-gray-900 dark:opacity-50`}>
    </div>
  </div>
  <div class={`relative py-20 duration-300 overflow-hidden`}>
    <div class="relative z-10 m-auto max-w-6xl px-4 md:px-8">
      <div class="md:flex">
        <div class="mb-12 md:w-1/4">
          <p class="uppercase tracking-widest text-gray-300">Work involved</p>
          <p class="mt-5 max-w-prose text-lg tracking-wide text-gray-400">
            Flyers
          </p>
          <p class="mt-5 max-w-prose text-lg tracking-wide text-gray-400">
            Brochures
          </p>
          <p class="mt-5 max-w-prose text-lg tracking-wide text-gray-400">
            Bags
          </p>
          <p class="mt-5 max-w-prose text-lg tracking-wide text-gray-400">
            Ads
          </p>
          <p class="mt-5 max-w-prose text-lg tracking-wide text-gray-400">
            Other Prints
          </p>
        </div>

        <div class="ml-auto max-w-3xl md:w-3/4">
          <p class="mb-5 uppercase tracking-widest text-gray-300">
            Briefly about Hausbrot.at
          </p>

          <div class="flex flex-col gap-8 pb-12">
            <p class="text-gray-4 text-lg tracking-wide text-gray-400">
              Home delivery of fresh bread and many other food products in
              Vienna. A provider of everything you need for breakfast or lunch
              break. Fresh, high-quality, regional and delicious.
            </p>
          </div>

          <p class="mb-5 uppercase tracking-widest text-gray-300">Projects</p>
          <div class="flex flex-col gap-8">
            <p class="text-lg tracking-wide text-gray-400">
              Applying the corporate design language in various projects.
            </p>

            <Image
              src={hbr_content_img_01}
              alt="sketches"
              class="rounded-2xl"
            />

            <Image
              src={hbr_content_img_05}
              alt="hausbrot.ta print materials"
              class="rounded-2xl"
            />

            <Image
              src={hbr_content_img_06}
              alt="hausbrot.ta print materials"
              class="rounded-2xl"
            />

            <Image
              src={hbr_content_img_03}
              alt="hausbrot.ta print materials"
              class="rounded-2xl"
            />

            <Image
              src={hbr_content_img_04}
              alt="hausbrot.ta print materials"
              class="rounded-2xl"
            />

            <Image
              src={hbr_content_img_02}
              alt="hausbrot.ta print materials"
              class="rounded-2xl"
            />

            <Image
              src={hbr_content_img_07}
              alt="HBR bags"
              class="rounded-2xl"
            />

            <div class="inline-flex">
              <a
                href="https://hausbrot.at/"
                target="_blank"
                rel="nofollow noreferrer"
                class="focus:ring-site-primary flex items-center gap-2 rounded-full bg-orange px-6 py-2 text-lg hover:bg-orange-light focus:ring-4"
              >
                Visit webshop
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="h-6 w-6"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25"
                  ></path>
                </svg>
              </a>
            </div>

            <p
              class="mt-8 border-t-2 border-dashed border-gray-700 pt-12 uppercase tracking-widest text-gray-400"
            >
              Acknowledgement
            </p>
            <p class="max-w-prose text-sm tracking-wide text-gray-400">
              &copy; Some used images belongs to connect724 GmbH.
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
